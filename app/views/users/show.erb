<h1> <%= @slug.username %> </h1>

<% @slug.recipes.each do |recipe| %>
  <div class='recipe-container'><h2><%= recipe.name %></h2>
     <ul>
       <li>Hops: <%= recipe.hops %>
       <li>Malt: <%= recipe.malt %>
       <li>Grain: <%= recipe.grain %>
       <li>Yeast: <%= recipe.yeast %>
    </ul>
</div>
<% end %>