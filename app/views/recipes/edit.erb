<% @current_user = current_user%>
<h1>Edit <%= @recipe.name %></h1>
  <form action='/recipes/<%= @recipe.id %>' method='POST'>
  <input id="hidden" type="hidden" name="_method" value="patch">

    <p><h3>Recipe Name: <%= @recipe.name %></h3>
    <input type='text' name='name' required></p>

    <p><h3>Malt: <%= @recipe.malt %></h3>
        <input type='text' name='malt' required></p>

    <p><h3>Hops: <%= @recipe.hops %></h3>
        <input type='text' name='hops' required></p>

    <p><h3>Yeast: <%= @recipe.yeast %></h3>
        <input type='text' name='yeast' required></p>

    <p><h3>Grains: <%= @recipe.grain %></h3>
        <input type='text' name='grain' required></p>
        <br>

    <input type='hidden' name='user_id' id='user_id' value='<%=@current_user.id%>'>
    <input type='submit' value='Edit Recipe'>
  </form>